.row
  %h3 Add post

.row
  = form_for @post do |f| 
    .row.form-group
      = f.label :title
      = f.text_field :title, placeholder: "Title", class: 'form-control'
    .row.form-group
      = f.label :content
      = f.text_area :content, class: 'form-control'
    .form-group
      = f.submit 'Save', class: 'btn btn-primary'