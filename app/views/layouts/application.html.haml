!!! 5
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ThesisCode
    = csrf_meta_tags
    = csp_meta_tag
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_pack_tag    'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-primary
      %a.navbar-brand(href="/")
        %img.logo_top.d-inline-block.align-top(src="#{asset_pack_path 'media/images/logo_transparent.png'}")
      %ul.navbar-nav.mr-auto
        - if user_signed_in?
          %li.nav
            = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link'
        - else
          %li
            = link_to 'Login', new_user_session_path, class: 'nav-link'
          %li
            = link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path,  class: 'nav-link'
    .container
      .row
        .col
          %p.notice= notice
          %p.alert= alert
      .row
        .col
          = yield
